{
  "version": 2,
  "builds": [
    {
      "src": "client/vite.config.ts",
      "use": "@vercel/static-build",
      "config": { "distDir": "client/dist" }
    },
    {
      "src": "api/**/*",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [{ "source": "/api(.*)", "destination": "/api" }]
}
