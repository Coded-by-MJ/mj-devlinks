{
  "compilerOptions": {
    "target": "ES2017", // ECMAScript target version
    "module": "commonjs", // Use CommonJS module system
    "outDir": "./dist", // Output directory for compiled files relative to 'server'
    "rootDir": "./", // Root directory is the 'server' folder itself
    "strict": true, // Enable strict type-checking
    "esModuleInterop": true // Enable better interoperability with CommonJS
  },
  "include": ["./*.ts"], // Include all TypeScript files directly in 'server'
  "exclude": ["node_modules"] // Exclude 'node_modules' from compilation
}
